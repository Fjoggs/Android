<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:name="no.hist.vegardfj.oving6.LoginFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/activity_login_fragment" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/login_button_logIn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:onClick="onClickLogIn"
            android:text="@string/login_button_send" />

        <Button
            android:id="@+id/login_button_restartApplication"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:onClick="onClickRestartApplication"
            android:text="@string/login_button_tryAgain" />
    </LinearLayout>
</LinearLayout>
